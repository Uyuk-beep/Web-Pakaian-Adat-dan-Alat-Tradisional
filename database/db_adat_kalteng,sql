DROP DATABASE db_adat_kalteng;

# Membuat Database
CREATE DATABASE db_adat_kalteng;

# Memilih Database
USE db_adat_kalteng;

# Membuat tabel tb_admin
CREATE TABLE tb_admin (
    id_admin  INT AUTO_INCREMENT PRIMARY KEY,  
    username  VARCHAR(50),
    password  VARCHAR(50),
    nama      VARCHAR(50),
    no_tlp    VARCHAR(12),
    alamat    VARCHAR(50),
    gambar    TEXT
);

# Membuat tabel tb_kategori
CREATE TABLE tb_kategori (
    id_kategori   INT AUTO_INCREMENT PRIMARY KEY,
    kategori      VARCHAR(50)
);

# Membuat tabel tb_produk
-- CREATE TABLE tb_produk (
--     id_produk     INT AUTO_INCREMENT PRIMARY KEY,
--     nama_produk   VARCHAR(50),
--     gambar_produk TEXT,
--     id_kategori   INT,
--     FOREIGN KEY (id_kategori) REFERENCES tb_kategori(id_kategori)
-- );

CREATE TABLE tb_produk (
    id_produk     INT AUTO_INCREMENT PRIMARY KEY,
    nama_produk   VARCHAR(50),
    gambar_produk TEXT,
    video_produk  TEXT,
    id_kategori   INT,
    FOREIGN KEY (id_kategori) REFERENCES tb_kategori(id_kategori)
);

# Membuat tabel tb_detail_produk
CREATE TABLE tb_detail_produk (
    id_detail_produk    INT AUTO_INCREMENT PRIMARY KEY,
    deskripsi           TEXT,
    id_produk           INT,
    FOREIGN KEY (id_produk) REFERENCES tb_produk(id_produk)
);

# Membuat tabel tb_blog
-- CREATE TABLE tb_blog (
--     judul           TEXT,
--     deskripsi_blog  TEXT,
--     gambar_blog     TEXT
-- );
CREATE TABLE tb_blog (
    id_blog         INT AUTO_INCREMENT PRIMARY KEY, 
    judul           VARCHAR(255) NOT NULL,      
    deskripsi_blog  TEXT NOT NULL,   
    penulis         VARCHAR(50) NOT NULL,       
    tanggal         DATE NOT NULL,             
    gambar_blog     TEXT NOT NULL
);

# Membuat tabel tb_kategori
CREATE TABLE tb_tentang_kami (
    judul                   TEXT,
    deskripsi_tentang_kami  TEXT
);



